<body>
  <p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>

<td><%= book.body %></td>
<td><%= link_to "Show" %></td>
<td><%= link_to "Edit" %></td>
<td><%= link_to "Destroy" %></td>
</tr>
<% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<div class="field">
<label>title</label>
<%= f.text_field :title %>
</div>

<div class="field">
<label>body</label>
<%= f.text_area :body %>
</div>

<div class="actions"><%= f.submit'Create Book' %></div>
<% end %>
</body>