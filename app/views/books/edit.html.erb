<body>
  <p id="notice">
    <% flash[:notice] %>
  </p>
  
  <h1>Editing book</h1>

  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %></div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %></div>

  <div class="actions"><%= f.submit 'Update Book' %></div>

  <% end %>

  <a><%= link_to "Edit", edit_book_path(@book.id) %></a>
   |
  <a><%= link_to "Back", '/books' %></a>
</body>